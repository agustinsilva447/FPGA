#include <stdio.h>
#include "comblock.h"
#include "platform.h"
#include "xil_printf.h"
#include "xparameters.h"


int main()
{
	int clk = 0;
	int n = 0;
    init_platform();
    print("Hello World\n\r");


    cbWrite(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_OREG0, 1);
    cbWrite(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_OREG0, 0);
    xil_printf("Counter: %U. \n", cbRead(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_IREG0));
    xil_printf("Done: %U. \n", cbRead(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_IREG1));

    while (cbRead(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_IREG1) == 0){
    	if (clk == 0){
    		clk = 1;
    	} else {
    		clk = 0;
    	}
    	n = n + 1;
    	cbWrite(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_OREG1, clk);
    };

    xil_printf("Counter: %U. \n", cbRead(XPAR_COMBLOCK_0_AXIL_BASEADDR, CB_IREG0));
    xil_printf("N clock: %U. \n", n);

    cleanup_platform();
    return 0;
}
